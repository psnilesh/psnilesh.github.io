---
layout: default.njk
title: "Tags"
permalink: /tags/
---

<div class="tags">
  <div class="tags-header">
    <h2 class="tags-header-title">{{ title }}</h2>
    <div class="tags-header-line"></div>
  </div>
  
  <div class="tags-clouds">
    {% for tag in collections.tagList %}
      <a href="#{{ tag }}">{{ tag }}</a>
    {% endfor %}
  </div>

  {% for tag in collections.tagList %}
    <div class="tags-item" id="{{ tag }}">
      <svg class="tags-item-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
        <line x1="7" y1="7" x2="7.01" y2="7"></line>
      </svg>
      <h2 class="tags-item-label">{{ tag }}</h2>
      {% for post in collections.posts %}
        {% if post.data.tags and tag in post.data.tags %}
          <a class="tags-post" href="{{ post.url }}">
            <div>
              <span class="tags-post-title">{{ post.data.title }}</span>
              <div class="tags-post-line"></div>
            </div>
            <span class="tags-post-meta">
              <time datetime="{{ post.date }}">{{ post.date | date('YYYY-MM-DD') }}</time>
            </span>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  {% endfor %}
</div>
